<div class="header-wrapper wrapper">
  <div class="container">
    <div class="header">
      <%= link_to 'Problems', root_path, class: 'brand'%>
      <!-- <a href="#" class="brand">Problems</a> -->
      <div class="header-navigation">
        <div class="user-profile">
          <span>
            <% if current_user %>
              <%= link_to user_path(current_user) do %>
              <i style="color: white" class="fa fa-user"></i>
              <% end %>
            <% else %>
              <%= link_to new_user_session_path do %>
              <i style="color: white" class="fa fa-user"></i>
              <% end %>
            <% end %>
          </span>
        </div>
        <ul>
          <li><%= link_to "The List", projects_url %></li>
          <li><%= link_to 'Sign In', new_user_session_path unless current_user %></li>
          <% if current_user %>
          <li><%= link_to 'My Page', user_path(current_user) %></li>
          <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
          <% end %>
        </ul>
        <button type="button" class="mobile-menu-toggle btn btn-primary hidden-lg hidden-md hidden-sm" data-toggle="collapse" data-target="#bs-navbar-collapse">
          <i class="fa fa-bars"></i>
        </button>
      </div>

      <!--Mobile Navigation-->
      <div class="collapse mobile-navigation hidden-sm hidden-md hidden-lg" id="bs-navbar-collapse">
        <ul>
          <li><%= link_to "The List", projects_url %></li>
          <li><%= link_to 'Sign In', new_user_session_path unless current_user %></li>
          <% if current_user %>
          <li><%= link_to 'My Page', user_path(current_user) %></li>
          <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
          <% end %>
        </ul>
      </div>
      <!--/.Mobile Navigation-->
    </div>
  </div>
</div>
<div class="breadcrumb-wrapper wrapper">
  <div class="container">
    <div class="breadcrumb-container">
      <% if current_user %>
        <%= link_to user_path(current_user) do %>
        <i class="fa fa-home"></i> DASHBOARD
        <% end %>
      <% else %>
        <%= link_to new_user_session_path do %>
        <i class="fa fa-home"></i> DASHBOARD
        <% end %>
      <% end %>
      <% if @current_page %>
      <span>/</span>
      <%= link_to @current_page, params.merge(:c => "e") %>
      <% end %>
    </div>
  </div>
</div>
