<!DOCTYPE html>
<html>
<head>
  <title>Problems</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <script type="text/x-mathjax-config">
    MathJax.Hub.Config({
      tex2jax: {
       inlineMath: [ ['$','$'] ],
       processEscapes: true
      },
      "HTML-CSS": {
        linebreaks: {
          automatic: false
        }
      }
    });
  </script>
  <%= mathjax_tag %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="nav">
    <span class="logo"><h3 style="margin:0 0 0 0;"><a href="<%= root_url %>" style="color:black;text-decoration:none;">Problems</a></h3></span>
    <ul class="menu-items">
      <li><%= link_to "The List", projects_url %></li>
      <li><%= link_to 'Sign In', new_user_session_path unless current_user %></li>
      <% if current_user %>
      <li><%= link_to 'My Page', user_path(current_user) %></li>
      <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
      <% end %>
    </ul>
  </div>

  <% flash.each do |type, message| %>
    <div class="alert <%= alert_class_for(type) %> ">
      <%= message %>
    </div>
  <% end %>

  <div class="container">
    <%= yield %>
  </div>

  <% if Rails.env.development? %>
    <div class='container'>
      <%= debug(params) %>
    </div>
  <% end %>

</body>
<footer>

  <%= render 'layouts/footer' %>

</footer>
</html>
