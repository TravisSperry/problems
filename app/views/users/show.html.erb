<div class="content profile-page">
  <div class="box-profile-information">
    <div class="content-box">
      <h1 class="profile-caption"><%= @user.full_name %></h1>
      <%= link_to 'ADD A PROBLEM', new_project_path, class: 'btn btn-primary' %>
      <% if current_user && current_user == @user %>
      <%= link_to "EDIT ACCOUNT", edit_user_path, class: 'btn btn-primary' %>
      <% end %>
      <div class="btn-group">
        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" type="button">OTHER STUFF
          <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-menu">
          <%= link_to 'STANDARDS', standards_path, class: 'btn btn-primary' %>
          <%= link_to 'PROBLEM TYPES', types_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
  <!--/.Box - Profile Info-->
  <!--Box - Problem Status-->
  <div class="box-problem-description box-green">
    <div class="title-container">
      <span class="title-icon">
        <i class="fa fa-star-o"></i>
      </span>
      <h2 class="title-text">Published</h2>
    </div>
    <div class="problem-description">
      <div class="problem-description-content">
        <div class="content-panel">
          <ul class="list-unstyled fa-ul list-problems">
            <% @user.projects_published.each do |project| %>
            <li><%= link_to project do %>
              <i class="fa-li fa fa-circle-o"></i><%= project.name %>
              <% end %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <!--/.Box - Problem Status-->
  <% unless Project.pending_review.empty? %>
  <div class="box-problem-description box-orange">
    <div class="title-container">
      <span class="title-icon">
        <i class="fa fa-file-text-o"></i>
      </span>
      <h2 class="title-text">Pending Review</h2>
    </div>
    <div class="problem-description">
      <div class="problem-description-content">
        <div class="content-panel">
          <ul class="list-unstyled fa-ul list-problems">
            <% Project.pending_review.each do |project| %>
            <li><%= link_to project do %>
              <i class="fa-li fa fa-circle-o"></i><%= project.name %>
              <% end %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <!--Box - Problem Status-->
  <div class="box-problem-description box-blue">
    <div class="title-container">
      <span class="title-icon">
        <i class="fa fa-file-text-o"></i>
      </span>
      <h2 class="title-text">Drafts</h2>
    </div>
    <div class="problem-description">
      <div class="problem-description-content">
        <div class="content-panel">
          <ul class="list-unstyled fa-ul list-problems">
            <% @user.projects_drafted.each do |project| %>
              <li><%= link_to project do %>
                <i class="fa-li fa fa-circle-o"></i><%= project.name %>
                <% end %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
