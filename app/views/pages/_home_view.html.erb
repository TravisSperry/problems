<div class="content">
  <div class="home-content">
    <section class="box-search-problems">
      <div class="search-icon">
        <span>
          <i class="fa fa-4x fa-search"></i>
        </span>
      </div>
      <h1 class="search-caption">Problems</h1>
      <h4 class="search-sub-caption">The Place to go when you want a good challange.</h4>

      <%= simple_form_for :search,
                          :class => 'form',
                          :url => url_for(:action => 'home', :controller => 'pages'),
                          :method => 'get' do |f| %>
        <div class="form-group">
          <%= f.input :terms, label: false, input_html: { class: "form-control" } %>
        </div>
        <div class="form-group search-button">
          <%= f.button :submit, "SEARCH", class: "btn btn-primary" %>
        </div>
      <% end %>
    </section>
    <hr>
    <section class="problem-category">
      <div class="box-good">
        <div class="box-problem-category box-green">
          <div class="title-container">
            <span class="title-icon">
              <i class="fa fa-star-o"></i>
            </span>
            <h2 class="title-text">Good...</h2>
          </div>
          <div class="problem-category-description">
            <p>This is an example of a problem that is right on the money :)</p>
          </div>
        </div>
      </div>
      <div class="box-not-so-good">
        <div class="box-problem-category box-blue">
          <div class="title-container">
            <span class="title-icon">
              <i class="fa fa-star-o"></i>
            </span>
            <h2 class="title-text">Not so good...</h2>
          </div>
          <div class="problem-category-description">
            <p>This is an example of a problem that wouldn't be a good fit for the problems index.</p>
          </div>
        </div>
      </div>
    </section>
    <hr>
  </div>
</div>
