<div class="content listing-page-content">
  <div class="row">
    <div class="col-xs-12">
      <div style="display:none;" class="search-box">
            <%= simple_form_for :search,
                                :class => 'form-control',
                                :url => url_for(:action => 'home', :controller => 'pages'),
                                :method => 'get' do |f| %>
              <div class="form-group has-feedback">
              <div class="form-group">
                <%= f.input :terms, label: false, input_html: { class: "form-control" } %>
              </div>
            <% end %>
            <span class="glyphicon glyphicon-search form-control-feedback"></span>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="listing-page">
    <h1 class="page-title">The List</h1>
    <div class="listing-panel listing-panel-green">
      <div class="title-container">Published Problems</div>
      <div class="problems-list">
        <% @projects.publications.each do |project| %>
        <div class="problem">
          <div class="media">
            <div class="media-left">
              <%= link_to project do %>
              <%= image_tag(project.featured_image_url) %>
              <% end %>
            </div>
            <div class="media-body">
              <h4 class="media-heading"><%= link_to project.name, project %></h4>
              <p><%= project.content %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <% if current_user %>
      <div class="listing-panel listing-panel-blue">
        <div class="title-container">Problem Drafts</div>
        <div class="problems-list">

          <% current_user.projects_drafted.each do |project| %>
          <div class="problem">
            <div class="media">
              <div class="media-left">
                <%= link_to project do %>
                <%= image_tag(project.featured_image_url) %>
                <% end %>
              </div>
              <div class="media-body">
                <h4 class="media-heading"><%= link_to project.name, project %></h4>
                <p><%= project.content %></p>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
