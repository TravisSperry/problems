<div class="row">
  <div class="column text-center">
    <h1>Published Projects</h1>
    <table align="center">
      <thead>
        <tr>
          <th>Name</th>
          <th>Content</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @projects.publications.each do |project| %>
        <tr>
          <td> <%= project.name %> </td>
          <td> <%= project.content %> </td>
          <td> <%= link_to 'VIEW', project %> </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% if current_user %>
  <div class="row" style='margin-top:5%;'>
    <div class="column text-center">
      <h1>Project Drafts</h1>
      <table align="center">
        <thead>
          <tr>
            <th>Name</th>
            <th>Content</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @projects.drafts.each do |project| %>
          <tr>
            <td> <%= project.name %> </td>
            <td> <%= project.content %> </td>
            <td> <%= link_to 'SHOW', project %> </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
